{
	"name": "juno-calendar",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "tsc --noEmit && vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"postinstall:copy-auth": "node -e \"require('fs').cpSync('node_modules/@junobuild/core-peer/dist/workers/', './static/workers', {recursive: true});\"",
		"postinstall": "npm run postinstall:copy-auth",
		"e2e": "NODE_ENV=development playwright test",
		"e2e:ci": "playwright test --reporter=html"
	},
	"devDependencies": {
		"@dfinity/internet-identity-playwright": "^0.0.4",
		"@junobuild/config": "^0.0.16",
		"@junobuild/vite-plugin": "^0.0.18",
		"@playwright/test": "^1.48.2",
		"@sveltejs/adapter-static": "^3.0.6",
		"@sveltejs/kit": "^2.7.4",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@types/eslint": "^9.6.1",
		"@types/node": "^22.8.1",
		"autoprefixer": "^10.4.19",
		"daisyui": "^4.12.10",
		"eslint": "^9.14.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.0",
		"globals": "^15.9.0",
		"postcss": "^8.4.38",
		"prettier": "^3.2.5",
		"prettier-plugin-organize-imports": "^4.0.0",
		"prettier-plugin-svelte": "^3.2.6",
		"svelte": "^5.1.9",
		"svelte-check": "^4.0.5",
		"tailwindcss": "^3.4.3",
		"tslib": "^2.8.1",
		"typescript": "^5.4.5",
		"typescript-eslint": "^8.12.2",
		"vite": "^5.4.10"
	},
	"dependencies": {
		"@junobuild/core-peer": "^0.0.28",
		"svelte-confetti": "^2.2.0"
	}
}
